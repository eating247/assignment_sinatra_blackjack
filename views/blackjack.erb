<h1>Player's Hand</h1>
<% player_hand.each do |card| %>
<%= card.suit %><%= card.value %><br>
<% end %>

<%= erb :"shared/form" %>

<h1>Dealer's Hand</h1>
<% dealer_hand.each do |card| %>
<%= card.suit %><%= card.value %><br>
<% end %>

<br>
<h1><%= message if message %></h1>
<h4>Player Sum <%= player_sum if player_sum %></h4>
<h4>Dealer Sum <%= dealer_sum  if dealer_sum %></h4>

<h3>Bankroll: <%= bankroll %></h3>

<a href="/">New Game</a>
